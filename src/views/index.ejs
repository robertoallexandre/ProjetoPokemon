<html>
  <head>
    <title>Minidex</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet"> 
    <link rel="stylesheet" href="./css/styles.css">
  </head>
  <body>

    <%- include('./partials/header') %> 

    <main>
      <div class="row">
        <div class="column">
          <a href="/ditto">Ditto</a>
          <a href="/dratini">Dratini</a>
          <a href="/charizard">Charizard</a>
        </div>
        <table id="table" class="<%= pokemon ? 'show' : 'hide' %>">
          <tr>
            <td colspan="2"> <img src='<%= pokemon ? pokemon.image : '' %> ' /> </td>
          </tr>
          <tr>
            <td>Nome:</td>
            <td><%= pokemon ? pokemon.name : '' %> </td>
          </tr>
          <tr>
            <td>Tipo(s):</td>
            <td><%= pokemon ? pokemon.types : '' %></td>
          </tr>
        </table>
        <div id="initial" class="<%= pokemon ? 'hide' : 'show' %>"> Selecione um Pok√©mon </div>
      </div>
    </main>
  </body>
</html>